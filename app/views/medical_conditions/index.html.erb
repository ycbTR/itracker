<h1>Listing Medical Conditions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @medical_conditions.each do |medical_condition| %>
      <tr>
        <td><%= medical_condition.name %></td>
        <td><%= link_to 'Show', medical_condition %></td>
        <td><%= link_to 'Edit', edit_medical_condition_path(medical_condition) %></td>
        <td><%= link_to 'Destroy', medical_condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

