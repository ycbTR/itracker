<div class="row-fluid">
  <div class="span6">
  </div>
  <div class="span6"><h2 class="pull-right">Social Media Contacts Report</h2>
  </div>
</div>
<hr>



<div class="row-fluid">
  <div class="span12">

    <br>
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Patient Name</th>
        <th>Email1</th>
        <th>Email2</th>
        <th>Facebook Account</th>
        <th>Twitter Account</th>
      </tr>
      </thead>

      <tbody>
      <% @patients.each do |patient| %>
          <tr>
            <td><%= patient.fullname %></td>
            <td><%= patient.email1 %></td>
            <td><%= patient.email2 %></td>
            <td><%= human_boolean patient.facebook_account %></td>
            <td><%= human_boolean patient.twitter_account %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= page_entries_info @patients %>
    <%= paginate @patients %>
  </div>
</div>


