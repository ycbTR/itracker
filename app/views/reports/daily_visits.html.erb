<div class="row-fluid">
  <div class="span8">
    <div class="row-fluid">
      <div class="span2"><strong>Today's Date</strong></div>
      <div class="span3"><%= Date.today.strftime('%A - %B %d, %Y') %> </div>
    </div>


    <div class="row-fluid marT10">
      <%= search_form_for @search, url: daily_visits_reports_path, html: {class: "form-inline"} do |f| %>
          <div class="span5" style="margin-left: 0px !important;">
            <div class="form-group">
              <label>Change Date: </label>
              <%= f.text_field :date_visit_eq, value: f.object.date_visit_eq.to_date, class: "form-control datepicker dpicker" %>
              <i class="icon icon-calendar"></i>
            </div>
          </div>

          <div class="span2">
            <%= f.submit "SEARCH", class: "btn" %>
          </div>
      <% end %>
    </div>

  </div>
  <div class="span4"><h2 class="pull-right">Daily Visit List</h2>
  </div>
</div>
<hr>



<div class="row-fluid">
  <div class="span12">

    <br>
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Phone1</th>
        <th>Phone2</th>
        <th>Email</th>
        <th>Date visit</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @visits.each do |visit| %>
          <tr>
            <td><%= visit.patient.id %></td>
            <td><%= visit.patient.fullname %></td>
            <td><%= visit.patient.phone1 %></td>
            <td><%= visit.patient.phone2 %></td>
            <td><%= visit.patient.email1 %></td>
            <td><%= visit.date_visit.to_date %></td>
            <td><%= link_to 'Show', [visit.patient, visit] %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= page_entries_info @visits %>
    <%= paginate @visits %>
  </div>
</div>


